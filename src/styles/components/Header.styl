// 针对导航项过多的情况进行优化
@media (min-width: 901px) {
  .nav {
    background: none
    -webkit-background-clip: initial
    -webkit-text-fill-color: initial
    background-clip: initial
    color: white

    ul {
      // 当导航项过多时，允许换行
      flex-wrap: wrap
      max-width: 100%
      
      // 确保至少有两行时的垂直间距
      row-gap: 10px
    }
  }
}

@media (max-width: 1024px) {
  .nav {
    background: none
    -webkit-background-clip: initial
    -webkit-text-fill-color: initial
    background-clip: initial
    color: white
    max-width: 100%
    padding: 10px 15px
    
