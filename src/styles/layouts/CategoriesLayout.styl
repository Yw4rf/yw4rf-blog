// CategoriesLayout.styl - 分类列表布局的样式

body {
  font-family: 'Inter', sans-serif;
}

// 容器样式
.categories-container {
  max-width: 1200px
  width: 75%
  margin: 0 auto
  padding: 2rem 1rem
  min-height: calc(100vh - 200px)
  animation: fadeInUp 0.8s ease-in-out forwards;
  animation-delay: 0.1s;
}

// 页面标题部分
.page-header {
  text-align: center
  margin-bottom: 3rem
  
  .page-title {
    display: flex
    align-items: center
    justify-content: center
    font-size: 3.5rem
    margin-bottom: 1rem
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.95), rgba(78, 186, 163, 0.9));
    -webkit-background-clip: text
    -webkit-text-fill-color: transparent
    background-clip: text
    font-family: 'Pixelify Sans', sans-serif;
  }
  
  .page-description {
    font-size: 1.1rem
    color: rgba(255, 255, 255, 0.8)
    max-width: 600px
    margin: 0 auto 1rem
  }
}

// 分类网格布局
.categories-grid {
  display: grid
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr))
  gap: 1.8rem
  padding: 1rem
  max-width: 1200px
  margin: 0 auto
}

.category-card {
  background rgba(255, 0, 0, 0.14)
  border-radius 1rem
  box-shadow 0 0 20px rgba(0, 0, 0, 0.2)
  color #f0f0f0
}

// 响应式布局
@media (max-width: 768px) {
  .page-header {
    margin-bottom: 2rem
    
    .page-title {
      font-size: 3rem
    }
    
    .page-description {
      font-size: 1rem
    }
  }
  
  .categories-grid {
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr))
    gap: 1rem
  }
}

@media (max-width: 480px) {
  .categories-container {
    padding: 1.5rem 0rem
    width: 95%
  }
  
  .page-header {
    .page-title {
      font-size: 3rem
    }
  }
  
  .categories-grid {
    grid-template-columns: 1fr
    padding: 0.5rem
  }
}
