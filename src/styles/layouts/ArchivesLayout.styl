body {
  font-family: 'Inter', sans-serif;
  margin-bottom: 35px
}

.archives-container {
  width: 63%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
  flex: 1 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.page-header {
  text-align: center
  margin-bottom: 3rem
  
  .page-title {
    font-size: 3.5rem
    margin-bottom: 1rem
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.95), rgba(78, 186, 163, 0.9));
    -webkit-background-clip: text
    -webkit-text-fill-color: transparent
    background-clip: text
    font-family: 'Pixelify Sans', 'Fira Code';
  }
  
  .page-description {
    font-size: 1.1rem
    color: rgba(255, 255, 255, 0.8)
    max-width: 600px
    margin: 0 auto
  }
}

// ESTILOS DE ARCHIVOS MODIFICADOS (Sintaxis Stylus Pura)

.year-header
  display: flex
  justify-content: space-between
  align-items: center
  background rgba(0, 0, 0, 0.18)
  border-radius 1rem
  box-shadow 0 0 20px rgba(0, 0, 0, 0.2)
  margin-top: 2rem
  padding-bottom: 0.25rem

.year-title
  font-size: 1.5rem
  font-weight: 600

.month-title
  margin-top: 1rem
  font-size: 1rem
  color: #ccc
  font-family: 'Pixelify Sans', monospace

.post-list
  list-style: none
  padding-left: 0
  margin-top: 0.5rem

.post-item
  margin: 1rem 0

.post-entry
  display: block
  padding: 1.25rem 1.5rem  
  background rgba(0, 0, 0, 0.18)
  border-radius 1rem
  box-shadow 0 0 20px rgba(0, 0, 0, 0.2)
  text-decoration: none
  transition: background 0.2s ease
  font-family: 'Inter', sans-serif
  color: #eee

  &:hover
    background: rgba(255, 255, 255, 0.06) 

.post-content
  display: block

.post-title
  font-weight: 700 
  font-size: 1.2rem 
  color: #f0f0f0 
  margin-bottom: 0.5rem 
  display: block 
  text-align: left

.post-metadata
  display: flex
  align-items: center
  flex-wrap: wrap

.post-date
  font-size: 0.85rem
  color: rgba(78, 186, 163, 0.9)
  font-weight: 500
  margin-right: 1.5rem
  margin-bottom: 0.5rem
  display: flex
  margin-top: 12px


// Categories
.post-categories-container
  color: rgba(78, 186, 163, 0.9)
  flex-wrap: wrap
  gap: 0.5rem
  margin-bottom: 0.75rem
  margin-top: 12px
  margin-right: 1.5rem

.post-category
  padding-right: 0.6rem  

// Tags
.post-tags-container
  color: rgba(78, 186, 163, 0.9)
  flex-wrap: wrap
  gap: 0.5rem
  margin-top: 0
  margin-bottom: 0.75rem
  display: flex
  margin-top: 12px

.post-tag
  font-size: 0.75rem
  font-weight: 500
  color: #fff
  background-color: rgba(78, 186, 163, 0.2)
  border: 1px solid rgba(78, 186, 163, 0.5)
  padding: 0.2rem 0.6rem
  border-radius: 4px
  line-height: 1

// Descripci√≥n
.post-description-similar
  font-size: 0.9rem
  color: rgba(255, 255, 255, 0.6)
  display: -webkit-box
  -webkit-line-clamp: 6 
  -webkit-box-orient: vertical
  overflow: hidden
  text-overflow: ellipsis
  width: 100%
  max-width: 100%

// Media Queries (Sintaxis corregida)
@media (max-width: 768px)
  .gifBlog img
    width: 65%
    height: auto

  .archives-container
    padding: 2rem 1.5rem
    width: 85%
  
  .page-header
    margin-bottom: 2rem
    
    .page-title
      font-size: 3rem
    
    .page-description
      font-size: 1rem
  
  .year-title
    font-size: 1.6rem
  
  .month-title
    font-size: 1.2rem

  .post-entry
    padding: 1rem

  .post-title
    font-size: 1.1rem

  .post-date
    margin-right: 0.75rem

  .post-description-similar
    -webkit-line-clamp: 3

@media (max-width: 480px)
  .gifBlog img
    width: 90%
    height: auto

  .archives-container
    padding: 2rem 1.2rem
    width: 90%

  .page-header
    .page-title
      font-size: 2.5rem
  
  .year-title
    font-size: 1.4rem
  
  .month-title
    font-size: 1.1rem



.no-posts {
  text-align: center
  padding: 3rem 1rem
  color: rgba(255, 255, 255, 0.7)
  font-size: 1.2rem
  background-color: rgba(0, 0, 0, 0.06)
  border-radius: 0.5rem
  width: 100%
}

.lazyload-observer {
  display: flex
  flex-direction: column
  align-items: center
  padding: 2rem 0
  opacity: 0.8
  transition: opacity 0.3s ease
  
  &:hover {
    opacity: 1
  }
}

.loading-spinner {
  display: flex
  justify-content: center
  margin-bottom: 0.5rem
  
  .dot {
    display: inline-block
    width: 10px
    height: 10px
    margin: 0 3px
    border-radius: 10px
    background-color: rgba(78, 186, 163, 0.9)
    animation: dotPulse 1.4s infinite ease-in-out both
    
    &:nth-child(1) {
      animation-delay: -0.32s
    }
    
    &:nth-child(2) {
      animation-delay: -0.16s
    }
    
    &:nth-child(3) {
      animation-delay: 0s
    }
  }
}

.loading-text {
  font-size: 0.9rem
  color: rgba(255, 255, 255, 0.7)
}

@keyframes dotPulse {
  0%, 80%, 100% { 
    transform: scale(0.3)
  }
  40% { 
    transform: scale(1.0)
  }
}

@keyframes fadeIn {
  from {
    opacity: 0
    transform: translateY(20px)
  }
  to {
    opacity: 1
    transform: translateY(0)
  }
}