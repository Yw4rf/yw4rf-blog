body {
  font-family: 'Inter', sans-serif;
  margin-bottom: 35px
}

.archives-container {
  width: 73%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
  flex: 1 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.page-header {
  text-align: center
  margin-bottom: 3rem
  
  .page-title {
    font-size: 3.5rem
    margin-bottom: 1rem
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.95), rgba(78, 186, 163, 0.9));
    -webkit-background-clip: text
    -webkit-text-fill-color: transparent
    background-clip: text
    font-family: 'Pixelify Sans', 'Fira Code';
  }
  
  .page-description {
    font-size: 1.1rem
    color: rgba(255, 255, 255, 0.8)
    max-width: 600px
    margin: 0 auto
  }
}

// Quitamos los encabezados de año, ya que la imagen japonesa no los usa de esa forma
.year-header, .year-title
  display: none

.month-header // Nuevo encabezado de mes más simple y destacado
  font-size: 1.5rem
  font-weight: 500
  color: #fff
  margin-top: 3rem // Separación clara de la sección anterior
  margin-bottom: 0.75rem
  padding-left: 0.5rem // Para alinearlo con los elementos de la lista
  border-bottom: 1px solid rgba(255, 255, 255, 0.1) // Una línea sutil
  display: block
  font-family: 'Inter', sans-serif

.post-list
  list-style: none
  padding-left: 0

.post-item
  box-shadow 0 0 20px rgba(0, 0, 0, 0.2)

.post-entry
  display: flex
  flex-direction: column // Apilamos verticalmente
  padding: 1.5rem 0 // Aumentamos el padding vertical, reducimos el horizontal
  order-bottom: 1px dashed rgba(255, 255, 255, 0.1) // Una línea punteada como separador sutilb
  background: rgba(0, 0, 0, 0.18)
  box-shadow: none // Sin sombra
  text-decoration: none
  transition: background 0.2s ease, padding-left 0.2s ease
  font-family: 'Inter', sans-serif
  color: #eee
  position: relative // Para la posible línea de tiempo
  margin: 10px 0

  &:hover
    padding-left: 0.5rem // Pequeña animación de desplazamiento a la derecha

.post-content
  display: block
  padding-left: 1rem // Sangría para el contenido

.post-date-top // Estilo para la fecha encima del título
  font-size: 0.8rem
  color: #aaa // Color más tenue
  font-weight: 400
  margin-bottom: 0.25rem
  display: flex
  align-items: center

  .date-icon
    margin-right: 0.5rem
    color: #4ebaa3 // Color destacado para el icono (o el color que uses)

/* Estilo para todos los enlaces NO visitados */
.post-title a,
.post-title a:link {
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.95), rgba(78, 186, 163, 0.9));
    -webkit-background-clip: text
    -webkit-text-fill-color: transparent
    background-clip: text
}

/* Estilo para los enlaces visitados */
.post-title a:visited {
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.95), rgba(78, 186, 163, 0.9));
    -webkit-background-clip: text
    -webkit-text-fill-color: transparent
    background-clip: text
}

.post-title
  font-weight: 600 // Menos negrita
  font-size: 1.5rem // Título más grande
  color: rgba(78, 186, 162, 1)
  margin-bottom: 0.75rem
  display: block
  text-align: left

.post-metadata
  display: block // Apilamos los metadatos
  margin-top: 0.5rem
  padding-left: 0 // Lo ajustamos

.post-date, .post-description-similar, .post-categories-container // Eliminamos o redefinimos los elementos antiguos
  display: none // Opcional: ocultamos los elementos que no queremos del diseño anterior

// Tags - Hacemos que se parezcan más a texto plano
.post-tags-container
  display: flex
  flex-wrap: wrap
  gap: 0.75rem // Espacio entre etiquetas
  margin-top: 0

.post-tag-title 
  font-size: 0.9rem
  font-weight: 400 // Peso de fuente normal
  color: #888 // Color de texto sutil
  background-color: transparent
  border: none // Sin borde
  padding: 1px // Sin padding
  line-height: 1
  transition: color 0.2s ease

.post-tag
  font-size: 0.9rem
  font-weight: 400 // Peso de fuente normal
  color: #000 // Color de texto sutil
  background-color: rgba(0, 0, 0, 0.09);
  border: none // Sin borde
  padding: 1px // Sin padding
  line-height: 1
  transition: color 0.2s ease

  &:hover
    color: #4ebaa3 // Resaltar al pasar el ratón

.post-tag a:link 
  color: #fff

.post-tag a:visited
  color: #fff

// Descripción
.post-description-similar
  font-size: 0.9rem
  color: rgba(255, 255, 255, 0.6)
  display: -webkit-box
  -webkit-line-clamp: 6 
  -webkit-box-orient: vertical
  overflow: hidden
  text-overflow: ellipsis
  width: 100%
  max-width: 100%
  margin-top: 10px

// Media Queries (Sintaxis corregida)
@media (max-width: 768px)
  .gifBlog img
    width: 65%
    height: auto

  .archives-container
    padding: 1.5rem 1rem
    width: 90%
  
  .page-header
    margin-bottom: 1.5rem
    
    .page-title
      font-size: 2.5rem
      
    .page-description
      font-size: 0.95rem
  
  .month-header 
    font-size: 1.3rem
    margin-top: 2rem 
    margin-bottom: 0.5rem 
    padding-left: 0.25rem
  
  .post-entry
    padding: 1rem 0
    
    &:hover
      padding-left: 0.25rem
  
  .post-content
    padding-left: 0.5rem

  .post-date-top
    font-size: 0.75rem

  .post-title
    font-size: 1.3rem
    margin-bottom: 0.5rem
  
  .post-tags-container
    gap: 0.5rem
    margin-top: 0.25rem

  .post-description-similar
    font-size: 0.85rem
    -webkit-line-clamp: 3
    margin-top: 0.5rem

@media (max-width: 480px)
  .gifBlog img
    width: 90%
    height: auto

  .archives-container
    padding: 1rem 0.5rem
    width: 95%

  .page-header
    margin-bottom: 1rem
    .page-title
      font-size: 2rem
      
  .month-header 
    font-size: 1.2rem
    margin-top: 1.5rem
    margin-bottom: 0.4rem 
    padding-left: 0.25rem

  .post-entry
    padding: 1rem 0

  .post-content
    padding-left: 0.25rem

  .post-title
    font-size: 1.2rem
    margin-top: -12px;
    margin-bottom: -28px;

  .post-date-top, .post-tag
    font-size: 0.7rem

  .post-description-similar
    margin-top: -8px;
    font-size: 0.8rem
    -webkit-line-clamp: 2


.no-posts
  text-align: center
  padding: 3rem 1rem
  color: rgba(255, 255, 255, 0.7)
  font-size: 1.2rem
  background-color: rgba(0, 0, 0, 0.06)
  border-radius: 0.5rem
  width: 100%

.lazyload-observer
  display: flex
  flex-direction: column
  align-items: center
  padding: 2rem 0
  opacity: 0.8
  transition: opacity 0.3s ease
  
  &:hover
    opacity: 1

.loading-spinner
  display: flex
  justify-content: center
  margin-bottom: 0.5rem
  
  .dot
    display: inline-block
    width: 10px
    height: 10px
    margin: 0 3px
    border-radius: 10px
    background-color: rgba(78, 186, 163, 0.9)
    animation: dotPulse 1.4s infinite ease-in-out both
    
    &:nth-child(1)
      animation-delay: -0.32s
    
    &:nth-child(2)
      animation-delay: -0.16s
    
    &:nth-child(3)
      animation-delay: 0s

.loading-text
  font-size: 0.9rem
  color: rgba(255, 255, 255, 0.7)

@keyframes dotPulse
  0%, 80%, 100%
    transform: scale(0.3)
  40%
    transform: scale(1.0)

@keyframes fadeIn
  from
    opacity: 0
    transform: translateY(20px)
  to
    opacity: 1
    transform: translateY(0)