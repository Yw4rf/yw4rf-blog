body {
  font-family: 'Inter', sans-serif;
  margin-bottom: 35px
  color: #f0f0f0
}

.archives-container {
  width: 50%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
  flex: 1 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.page-header {
  text-align: center
  margin-bottom: .8rem
  
  .page-title {
    font-size: 3.5rem
    margin-top: 2rem
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.95), rgba(78, 186, 163, 0.9));
    -webkit-background-clip: text
    -webkit-text-fill-color: transparent
    background-clip: text
    font-family: 'Pixelify Sans', 'Fira Code';
  }
  
  .page-description {
    font-size: 1.1rem
    color: rgba(255, 255, 255, 0.8)
    max-width: 600px
    margin: 0 auto
  }
}

