.post-list
  list-style: none
  padding-left: 0

.post-item
  margin-top: 10px // Mantenemos el espacio entre posts

.post-entry
  display: flex
  flex-direction: column // Apilamos verticalmente
  padding: 1.5rem 0 // Aumentamos el padding vertical, reducimos el horizontal
  order-bottom: 1px dashed rgba(255, 255, 255, 0.1) // Una línea punteada como separador sutilb
  background: transparent
  box-shadow: none // Sin sombra
  text-decoration: none
  transition: background 0.2s ease, padding-left 0.2s ease
  font-family: 'Inter', sans-serif
  color: #f0f0f0
  position: relative // Para la posible línea de tiempo

.post-content
  display: block
  // Añadimos un padding general al contenido para crear un margen interno consistente
  padding-left: 10px
  padding-right: 10px

// --- Fecha Superior (Pre-título) ---
.post-date-top
  font-size: 0.9rem // Un poco más grande para mejor legibilidad
  color: rgba(255, 255, 255, 0.8) // Color más tenue
  font-weight: 400
  margin-bottom: 0.5rem // Importante: Más espacio debajo de la fecha para separarla del título
  display: flex
  align-items: center

  .date-icon
    margin-right: 0.5rem
    color: #4ebaa3

// --- Título del Post (El problema principal) ---
.post-title
  font-weight: 700 // Más negrita como en la imagen
  font-size: 2rem // Título más grande para impactar
  line-height: 1.3 // **CLAVE:** Aumentar la altura de línea para evitar que las palabras se junten
  color: #f0f0f0 // Color claro, como en la imagen
  margin-bottom: 1rem // **CLAVE:** Más espacio debajo del título para separarlo de los tags
  display: block
  text-align: left

/* Estilo de los enlaces del título */
.post-title a,
.post-title a:link,
.post-title a:visited {
  color: #f0f0f0 // Mantenemos el color del texto del título
  text-decoration: none // Quitamos el subrayado por defecto
}

.post-title a:hover {
  color: #C9FFF1
  transition: color 0.3s ease
}

// --- Metadatos y Tags ---
.post-metadata
  display: block
  margin-top: 0.5rem
  padding-left: 0

.post-date, .post-description-similar, .post-categories-container
  display: none

.tags-mobile-container
  display: none

.post-tags-container
  display: flex
  flex-wrap: wrap
  align-items: center // Alinea el título de los tags con las etiquetas
  margin-top: .5rem 0 // Espacio entre el título y el bloque de tags
  line-height: 1 // <--- CLAVE: Reducir el espacio vertical de la línea
  gap: 0.5rem // Usamos gap en lugar de margin-right en los tags

.post-tag-title
  font-size: 0.9rem
  font-weight: 400
  color: rgba(255, 255, 255, 0.8)
  background-color: transparent
  border: none
  padding: 0

.post-tag
  font-size: 0.9rem
  font-weight: 600 // Hacemos el texto de la etiqueta más audaz
  color: #C9FFF1 // Color de texto en la etiqueta
  background-color: #1a1a1a // Fondo oscuro para el tag, similar a la imagen
  border: 1px solid #4ebaa3 // Borde sutil para darle una "caja"
  border-radius: 4px // Bordes redondeados
  padding: 2px 8px // Espacio interno
  line-height: 1.5
  transition: background-color 0.2s ease
  margin-right: 0.5rem
  margin-bottom: 0.5rem // <--- ¡LA LÍNEA CLAVE FALTANTE!

  &:hover
    background-color: #4ebaa3 // Cambia el fondo al pasar el ratón
    color: #1a1a1a

.post-tag a:link,
.post-tag a:visited
  color: inherit // Hereda el color del .post-tag
  text-decoration: none // Quitamos el subrayado
  font-weight: inherit

// --- Descripción ---
.post-description-similar
  font-size: 1rem
  color: rgba(255, 255, 255, 0.8) // Hacemos el color un poco más suave
  line-height: 1.6 // Mejora la legibilidad del bloque de texto
  display: -webkit-box
  -webkit-line-clamp: 6
  -webkit-box-orient: vertical
  overflow: hidden
  text-overflow: ellipsis
  width: 100%
  max-width: 95% // Ajustamos el ancho máximo para simular el margen derecho
  margin-top: 1rem // **CLAVE:** Más espacio para separarla claramente del bloque de tags/título
  margin-left: 0 // Aseguramos el margen izquierdo

