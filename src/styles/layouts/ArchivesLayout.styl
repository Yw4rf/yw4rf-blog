body {
  font-family: 'Inter', sans-serif;
}

.gifBlog {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 45px;
  margin-bottom: 20px;
}

.gifBlog img{
  width: 40%;
  height: auto
}

.archives-container {
  max-width: 1000px
  margin: 0 auto
  padding: 0rem 1rem
  min-height: calc(100vh - 200px)
}

.page-header {
  text-align: center
  margin-bottom: 3rem
  
  .page-title {
    font-size: 3.5rem
    margin-bottom: 1rem
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.95), rgba(78, 186, 163, 0.9));
    -webkit-background-clip: text
    -webkit-text-fill-color: transparent
    background-clip: text
    font-family: 'Pixelify Sans', 'Fira Code';
  }
  
  .page-description {
    font-size: 1.1rem
    color: rgba(255, 255, 255, 0.8)
    max-width: 600px
    margin: 0 auto
  }
}

.year-section {
  margin-bottom: 3rem
  position: relative
  animation: fadeIn 0.6s ease forwards
  opacity: 0
}

.year-header {
  display: flex
  align-items: center
  margin-bottom: 1.5rem
}

.year-title {
  font-size: 1.8rem
  margin: 0
  color: rgba(78, 186, 163, 0.9)
}

.year-count {
  margin-left: 1rem
  font-size: 0.9rem
  padding: 0.3rem 0.8rem
  background-color: rgba(1, 162, 190, 0.14)
  border-radius: 1rem
  color: rgba(255, 255, 255, 0.9)
}

.month-section {
  margin-bottom: 2rem
  position: relative
}

.month-title {
  font-size: 1.2rem
  margin: 0 0 1rem 0
  border-bottom: 1px dashed rgba(255, 255, 255, 0.2)
  padding-bottom: 0.5rem
  font-family: 'Pixelify Sans', sans-serif;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.95), rgba(78, 186, 163, 0.9));
    -webkit-background-clip: text
    -webkit-text-fill-color: transparent
    background-clip: text
}

.post-list {
  list-style: none
  padding: 0
  margin: 0
}

.post-date {
  min-width: 100px
  font-size: 0.9rem
  color: rgba(255, 255, 255, 0.6)
  margin-right: 1rem
}

.post-link {
  color: rgba(255, 255, 255, 0.9)
  text-decoration: none
  transition: all 0.2s ease
  position: relative
  overflow: hidden
  display: inline-block
  
  &::after {
    content: ""
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    height: 1px
    background-color: rgba(78, 186, 163, 0.9)
    transform: translateX(-100%)
    transition: transform 0.3s ease
  }
  
  &:hover {
    color: rgba(78, 186, 163, 0.9)
    
    &::after {
      transform: translateX(0)
    }
  }
}

.no-posts {
  text-align: center
  padding: 3rem 1rem
  color: rgba(255, 255, 255, 0.7)
  font-size: 1.2rem
  background-color: rgba(0, 0, 0, 0.06)
  border-radius: 0.5rem
  width: 100%
}

.lazyload-observer {
  display: flex
  flex-direction: column
  align-items: center
  padding: 2rem 0
  opacity: 0.8
  transition: opacity 0.3s ease
  
  &:hover {
    opacity: 1
  }
}

.loading-spinner {
  display: flex
  justify-content: center
  margin-bottom: 0.5rem
  
  .dot {
    display: inline-block
    width: 10px
    height: 10px
    margin: 0 3px
    border-radius: 10px
    background-color: rgba(78, 186, 163, 0.9)
    animation: dotPulse 1.4s infinite ease-in-out both
    
    &:nth-child(1) {
      animation-delay: -0.32s
    }
    
    &:nth-child(2) {
      animation-delay: -0.16s
    }
    
    &:nth-child(3) {
      animation-delay: 0s
    }
  }
}

.loading-text {
  font-size: 0.9rem
  color: rgba(255, 255, 255, 0.7)
}

@keyframes dotPulse {
  0%, 80%, 100% { 
    transform: scale(0.3)
  }
  40% { 
    transform: scale(1.0)
  }
}

@keyframes fadeIn {
  from {
    opacity: 0
    transform: translateY(20px)
  }
  to {
    opacity: 1
    transform: translateY(0)
  }
}


// TEMPORAL

.timeline-container
  padding: 0rem 1rem
  max-width: 768px
  margin: auto

.year-header
  display: flex
  justify-content: space-between
  align-items: center
  border-bottom: 1px solid rgba(255,255,255,0.1)
  margin-top: 2rem
  padding-bottom: 0.25rem

.year-title
  font-size: 1.5rem
  font-weight: 600

.month-title
  margin-top: 1rem
  font-size: 1rem
  color: #ccc
  font-family: 'Pixelify Sans', monospace

.post-list
  list-style: none
  padding-left: 0
  margin-top: 0.5rem

.post-item
  margin: 0.3rem 0

.post-entry
  display: flex
  justify-content: space-between
  align-items: center
  padding: 0.5rem 0.75rem
  border-radius: 6px
  background: rgba(255, 255, 255, 0.03)
  text-decoration: none
  transition: background 0.2s ease
  font-family: 'Inter', sans-serif
  font-size: 0.9rem
  color: #eee

  &:hover
    background: rgba(255, 255, 255, 0.06)

.post-date
  font-size: 0.8rem
  color: #aaa
  flex-shrink: 0
  margin-right: 1rem

.post-title
  flex-grow: 1
  text-align: right
  font-weight: 500




@media (max-width: 768px) {
  .gifBlog img{
  width: 65%;
  height: auto
}

  .archives-container {
    padding: 2rem 1.5rem
  }
  
  .page-header {
    margin-bottom: 2rem
    
    .page-title {
      font-size: 3rem
    }
    
    .page-description {
      font-size: 1rem
    }
  }
 
  .year-title {
    font-size: 1.6rem
  }
  
  .month-title {
    font-size: 1.2rem
  }
  
  .post-date {
    min-width: auto
    margin-bottom: 0.2rem
    margin-right: 0
  }
}

@media (max-width: 480px) {
  .gifBlog img{
  width: 90%;
  height: auto
}

  .archives-container {
    padding: 2rem 1.2rem
  }
  
  .page-header {
    .page-title {
      font-size: 2.5rem
    }
  }
  
  .year-title {
    font-size: 1.4rem
  }
  
  .month-title {
    font-size: 1.1rem
  }
  
}
