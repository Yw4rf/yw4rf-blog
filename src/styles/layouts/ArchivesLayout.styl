// --- Media Queries para Dispositivos ---

// Media Queries (Tabletas y Móviles Grandes)
@media (max-width: 768px)
  // Tags: Mostrar versión móvil y ocultar la de escritorio
  .tags-mobile-container
    display: block

  .tags-container
    display: none

  // Contenedor principal
  .archives-container
    padding: 1.5rem 1rem
    width: 90%

  // Título de la página de archivo
  .page-header
    margin-bottom: 1.5rem
    .page-title
      font-size: 3.5rem
    .page-description
      font-size: 1rem

  // Encabezado del mes
  .month-header
    font-size: 1.3rem
    margin-top: 2rem
    margin-bottom: 0.75rem // Espacio positivo
    padding-left: 0.25rem

  // Post individual
  .post-entry
    padding: 1rem 0
    &:hover
      padding-left: 0.25rem

  .post-content
    padding-left: 0.5rem

  // Fecha
  .post-date-top
    font-size: 0.85rem

  // Título del post
  .post-title
    font-size: 1.8rem
    line-height: 1.3 // Mantiene la legibilidad
    margin-top: 0.25rem // Espacio positivo
    margin-bottom: 0.75rem // Espacio positivo

  // Contenedor de Tags
  .post-tags-container
    display: flex // Se mantiene
    flex-wrap: wrap // Se mantiene
    gap: 0.5rem
    margin: .5rem 0 // Espacio entre el título y el bloque de tags
    font-size: 0.9rem

  // Descripción
  .post-description-similar
    font-size: 16px
    line-height: 1.5
    -webkit-line-clamp: 4 // Clamp a 4 líneas
    margin-top: 0.75rem // Espacio positivo

// Media Queries (Móviles Pequeños)
@media (max-width: 480px)
  // Imagenes
  .gifBlog img
    width: 90%
    height: auto

  .page-description
    padding: 0px 10px

  .archives-container
    padding: 1rem 0.5rem
    width: 98%

  // Título de la página
  .page-header
    margin-bottom: 1rem
    .page-title
      font-size: 3.1rem
      margin-top: 0

  // Encabezado del mes
  .month-header
    font-size: 1.1rem
    margin-top: 1.5rem
    margin-bottom: 0.5rem
    padding-left: 0.25rem

  // Contenido
  .post-entry
    padding: 0.75rem 0

  .post-content
    padding-left: 0.25rem

  .post-tag
    padding: 2px 8px // Espacio interno
    line-height: 1.5
    transition: background-color 0.2s ease
    margin-right: 0.2rem
    margin-bottom: 0.5rem // <--- ¡LA LÍNEA CLAVE FALTANTE!

  // Título del post
  .post-title
    font-size: 1.5rem
    line-height: 1.2
    margin-top: 0.25rem
    margin-bottom: 0.5rem

  // Tags y fecha
  .post-date-top, .post-tag
    font-size: 0.75rem

  // Descripción
  .post-description-similar
    font-size: 16px
    line-height: 1.4
    margin-top: 0.5rem
    -webkit-line-clamp: 6 // Clamp a 3 líneas

.no-posts
  text-align: center
  padding: 3rem 1rem
  color: rgba(255, 255, 255, 0.7)
  font-size: 1.2rem
  background-color: rgba(0, 0, 0, 0.06)
  border-radius: 0.5rem
  width: 100%

.lazyload-observer
  display: flex
  flex-direction: column
  align-items: center
  padding: 2rem 0
  opacity: 0.8
  transition: opacity 0.3s ease
  
  &:hover
    opacity: 1

.loading-spinner
  display: flex
  justify-content: center
  margin-bottom: 0.5rem
  
  .dot
    display: inline-block
    width: 10px
    height: 10px
    margin: 0 3px
    border-radius: 10px
    background-color: rgba(78, 186, 163, 0.9)
    animation: dotPulse 1.4s infinite ease-in-out both
    
    &:nth-child(1)
      animation-delay: -0.32s
    
    &:nth-child(2)
      animation-delay: -0.16s
    
    &:nth-child(3)
      animation-delay: 0s

.loading-text
  font-size: 0.9rem
  color: rgba(255, 255, 255, 0.7)

@keyframes dotPulse
  0%, 80%, 100%
    transform: scale(0.3)
  40%
    transform: scale(1.0)

@keyframes fadeIn
  from
    opacity: 0
    transform: translateY(20px)
  to
    opacity: 1
    transform: translateY(0)