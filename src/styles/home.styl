// Wrapper para centrar el bloque
.container-wrapper
  display flex
  justify-content center
  align-items center
  background transparent

.container-bloque
  position relative
  width 100%
  padding 0rem 1rem 1.5rem 1rem
  background rgba(0, 0, 0, 0.18)
  border-radius 1rem
  box-shadow 0 0 20px rgba(0, 0, 0, 0.2)
  color #f0f0f0
  font-size 0.95rem
  overflow visible
  transition all 0.3s ease
  
.container-bloque1 {
  margin-top: 3.5rem
}

.container-bloque p {
  font-size: 1rem
  font-family: 'Inter', sans-serif;
  line-height: 1.55;
}

.container-bloque .timeline {
    position: relative
    padding-left: 2rem
    margin: 2rem 0
    
    &::before {
      content: ""
      position: absolute
      left: 0
      top: 0
      width: 4px
      height: 100%
      background: linear-gradient(to bottom, 
        rgba(255, 255, 255, 0.2), 
        rgba(1, 162, 190, 0.4), 
        rgba(255, 255, 255, 0.2))
      border-radius: 2px
    }

    .timeline-item h4 {
      font-family: 'Pixelify Sans', sans-serif;
      padding-bottom: 4px;
    }

    .timeline-item {
      position: relative
      margin-bottom: 2rem
      line-height: 1.55;
      font-family: sans;
      font-family: 'Inter', sans-serif;
      
      &::before {
        content: ""
        position: absolute
        width: 12px
        height: 12px
        border-radius: 50%
        background-color: rgba(1, 162, 190, 0.8)
        border: 2px solid rgba(255, 255, 255, 0.3)
        left: -2.3rem
        top: 0.3rem
      }
    }
  }

